---
import {getEntry, getCollection, getEntries} from 'astro:content';
import ReferenceCard from '../../components/ReferenceCard.astro';
//import IllustrationCard from '../../components/IllustrationCard.astro';

const bab1 = await getEntry('sdyxz', 'bab1');
const {Content, headings} = await bab1.render();
const bab2 = await getEntry('sdyxz', 'bab2');
const bab3 = await getEntry('sdyxz', 'bab3');
const chapters = await getCollection('sdyxz');
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={bab1.data.description} />
		<title>{bab1.data.title}</title>
		<link rel="stylesheet" href="/styles/w3.css"/>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	</head>
	<body>
		<main class="w3-main">
			<div class="w3-container w3-row-padding">
				<h1>Memanah Rajawali</h1>
				<div class="w3-bar">
					<a class="w3-bar-item w3-btn w3-hover-black w3-round" href="/" title="Kembali ke halaman depan."><i class="fa fa-home"></i></a>
					<a class="w3-bar-item w3-btn w3-hover-black w3-round" href={bab2.slug} 
					    title=`Bab 2:\n${bab2.data.ilustrasi}`><i class="fa fa-arrow-right"></i></a>
				</div>
				<p></p>
				<div class="w3-col m6 l8 w3-container">
					<div class="w3-content">
						<Content />
					</div>
				</div>
                <div class="w3-col m6 l4 w3-padding-16">
					{
						chapters.map(bab => (
							<ReferenceCard image={bab.data.image} title={bab.data.title} ilustrasi={bab.data.ilustrasi} href={"/memanah-rajawali/" + bab.slug} />
						))
					}
					{
						<ul>
							{bab3.data.relatedBooks?.map((elm) => {<li>{elm}</li>})}
						</ul>
					}
                </div>
			</div>
		</main>
	</body>
</html>
