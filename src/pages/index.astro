---
import {getEntry, getCollection} from 'astro:content';
import ReferenceCard from '../components/ReferenceCard.astro';

const intro = await getEntry('blog', 'memanah-rajawali');
const {Content} = await intro.render();
const chapters = await getCollection('sdyxz');
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={intro.data.description} />
		<title>{intro.data.title}</title>
		<link rel="stylesheet" href="/styles/w3.css"/>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	</head>
	<body>
		<div class="w3-bar w3-top w3-white">
			<a class="w3-bar-item w3-btn w3-hover-black" href="/dgsd/readme">
				<i class="fa fa-book"></i> Tian Long Ba Bu</a>
			<a class="w3-bar-item w3-btn w3-hover-black w3-round" href="/tutorials">
				<i class="fa fa-book"></i> Tutorials</a>
			<a class="w3-bar-item w3-btn w3-hover-black w3-round" href="/yttlj/intro">
				<i class="fa fa-book"></i> Pedang dan Golok</a>
		</div>
		<main class="w3-main w3-container w3-padding-32">
			<div class="w3-row-padding">
				<div class="w3-col m9 l8">
					<div class="w3-container w3-content">
						<Content />
					</div>
				</div>
				<div class="w3-col m3 l4 w3-padding-16">
					<img src={intro.data.image} alt="Gambar front page" width="100%"/>
					<div class="w3-container w3-padding-16">
						<h3>Genghis Khan</h3>
						<p>
							Dalam cerita ini tokoh sejarah yang paling menonjol adalah Genghis Khan.
						</p>
					</div>
					{
						chapters.map(bab => (
							<ReferenceCard image={bab.data.image} title={bab.data.title} ilustrasi={bab.data.ilustrasi} href={"/memanah-rajawali/" + bab.slug} />
						))
					}
				</div>	
			</div>
		</main>
	</body>
</html>
