---
interface Props {
    image: string,
    title: string,
    ilustrasi: string
}
const {image, title, ilustrasi} = Astro.props;
---

<div class="w3-card w3-round-large">
    <img src={image} alt=`Gambar ilustrasi ${title}` width="100%"/>
    <div class="w3-container w3-padding-16">
        <h3>{title}</h3>
        <em>{ilustrasi}</em>
    </div>
</div>
